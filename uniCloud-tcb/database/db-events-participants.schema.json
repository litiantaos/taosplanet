{
	"bsonType": "object",
	"required": [
		"event_id",
		"user_id"
	],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"event_id": {
			"bsonType": "string",
			"foreignKey": "db-events._id"
		},
		"user_id": {
			"bsonType": "string",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"comment": {
			"bsonType": "string",
			"trim": "both"
		},
		"date": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		}
	},
	"version": "0.0.1"
}