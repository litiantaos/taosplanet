{
	"bsonType": "object",
	"required": [
		"name"
	],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"label": "名称",
			"trim": "both"
		},
		"description": {
			"bsonType": "string",
			"label": "描述",
			"trim": "both"
		},
		"icon": {
			"bsonType": "string",
			"label": "图标",
			"pattern": "^(http://|https://|/|./|@/)\\S",
			"trim": "both"
		},
		"sort": {
			"bsonType": "int",
			"label": "排序"
		},
		"post_count": {
			"bsonType": "int",
			"label": "动态数量"
		},
		"create_date": {
			"bsonType": "timestamp",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	},
	"version": "0.0.1"
}