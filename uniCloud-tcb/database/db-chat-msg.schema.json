{
	"bsonType": "object",
	"required": [
		"from_uid"
	],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"from_uid": {
			"bsonType": "string",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		"to_uid": {
			"bsonType": "string",
			"foreignKey": "uni-id-users._id"
		},
		"text": {
			"bsonType": "string",
			"title": "文本",
			"trim": "both"
		},
		"images": {
			"bsonType": "array",
			"title": "图片"
		},
		"videos": {
			"bsonType": "array",
			"title": "视频"
		},
		"location": {
			"bsonType": "object",
			"title": "位置"
		},
		"file": {
			"bsonType": "array",
			"title": "文件"
		},
		"reply_to_id": {
			"bsonType": "string",
			"foreignKey": "_id"
		},
		"create_time": {
			"bsonType": "timestamp",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}